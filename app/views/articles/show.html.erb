<p style="color: green"><%= notice %></p>
<div id="article-content">
  <h1 class="text-center mt-4"><%= @article.title %></h1>
  <div class="container">
    
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
      <div class="card text-center shadow  mb-5 bg-white rounded">
        <div class="card-header font-italic">
          by <%= @article.user.username %>
        </div>
        <div class="card-body">
          
          <p class="card-text"><%= simple_format(@article.description) %></p>
          
           <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info" %>
           <%= link_to "Delete", article_path(@article), class: "btn btn-outline-danger", data: {turbo_method: :delete} %>
           </p>
        </div>
        <div class="card-footer text-muted">
          <small> Created <%= time_ago_in_words(@article.created_at) %>  ago & updated <%= time_ago_in_words(@article.updated_at)   %>  ago </small>
        </div>
      </div>
      </div>
      </div>
    
  
</div>
</div>
   

