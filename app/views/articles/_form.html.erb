<div class="container">
<%= form_with(model: article, class: "shadom p-3 mb-3 bg-gray rounded") do |form| %>

  <% if article.errors.any? %>
  <div class="alert alert-danger alert-dismissible" role="alert">
  <h4 class="alert-heading"><%= pluralize(article.errors.count, "error") %> prohibited this article from being saved:</h4>
  <ul>
  <% article.errors.each do |error| %>
    <li><%= error.full_message %></li>
  <% end %>
</ul>

<button type="button" class="close" data-dismiss="alert" aria-label="Close">
<span aria-hidden="true">&times;</span>
</button>
  
  </div>
      

      
  <% end %>
  <div class="row justify-content-center">
   <div class="col-10">
    <div class="form-group row">
      <%= form.label :title , class: "col-2 col-form-label" %> 
      <div class="col-10">
        <%= form.text_field :title, class: "form-control", placeholder: "Enter Title" %>
      </div>
    </div>
    <br/>
    <div class="form-group row">
      <%= form.label :description , class: "col-2 col-form-label" %> 
      <div class="col-10">
        <%= form.text_area :description, class: "form-control",  placeholder: "Enter Description" %>
      </div>
    </div>
    <br/>
  <div class="form-group row justify-content-center">
    <div class="col-10">
    <%= form.submit class: "btn btn-outline-light btn-lg"%>
    </div>
  </div>
<% end %>
</div>
<%= link_to "Back to articles", articles_path, class: "text-white" %>
</div>
</div>