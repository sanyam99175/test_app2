<p style="color: green"><%= notice %></p>
<div id="article-content">
  <h1 class="text-center mt-4">Users</h1>
  <div class="container">
    <% @users.each do |user| %>
    <div class="row justify-content-md-center">
      <div class="col-8 mt-4">
      <div class="card text-center shadow  mb-5 bg-white rounded">
        
        <div class="card-body">
          <h5 class="card-title"><%= link_to user.username , user_path(user), class: "text-success" %></h5>
          <p class="card-text"><%=  user.email %></p>
          <p> <%= link_to "View", user, class: "btn btn-outline-success" %>
           <%= link_to "Edit", edit_user_path(user), class: "btn btn-outline-info" %>
           <%= link_to "Delete", user, class: "btn btn-outline-danger", data: {turbo_method: :delete} %>
           </p>
        </div>
        <div class="card-footer text-muted">
          <small> Created <%= time_ago_in_words(user.created_at) %>  ago & updated <%= time_ago_in_words(user.updated_at)   %>  ago </small>
        </div>
      </div>
      </div>
      </div>
    <% end %>
  
</div>
</div>
    <div class="card-header font-italic">
    <%= link_to "New user", new_article_path %>
  </div>



